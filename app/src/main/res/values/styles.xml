<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Base application theme-->
    <style name="BaseStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="MyCourt" parent="BaseStyle">
        <!-- Colors -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- GLOBAL COLORS -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item><!-- in dark theme, it must be lighter -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:colorError" tools:targetApi="26">@color/colorError</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>
        <!-- OTHER COlORS -->
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <!-- MATERIAL WIDGET DEFAULT STYLE -->
        <item name="materialButtonStyle">@style/defaultButtonStyle</item> <!-- Defaut button style-->
        <item name="floatingActionButtonStyle">@style/defaultFabStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
       <item name="materialCardViewStyle">@style/defaultCardViewStyle</item>
        <!-- transition and overlay-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--<item name="chipStyle">@style/ChipStyle</item>-->
    </style>

    <!-- default style for Buttons -->
    <style name="defaultButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="iconTint">@color/colorOnSecondary</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="28">@color/colorSecondary</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="28">@color/colorSecondary</item>
    </style>

    <!-- default style for Buttons -->
    <style name="defaultFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:outlineSpotShadowColor" tools:targetApi="28">@color/colorSecondary</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="28">@color/colorSecondary</item>
    </style>

    <style name="defaultCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <!--AppBar and Toolbar style -->
   <style name="MyCourt.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.ActionBar" />
   <style name="MyCourt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyCourt.ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="ToolBarTitleCenter" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textAlignment">center</item>
    </style>

    <!--Main title for shots and user name -->
    <style name="TextAppearance.Headline" parent="@android:style/TextAppearance.Material.Headline">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorHeadline</item>
    </style>

    <style name="TextAppearance.Subhead" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorSubHead</item>
    </style>

    <!-- categoryTitle -->
    <style name="TextAppearance.TitlePrimary" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorPrimaryTitle</item>
    </style>

    <style name="TextAppearance.TitleSecondary" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorSecondaryTitle</item>
    </style>

    <style name="TextAppearance.Caption" parent="@android:style/TextAppearance.Material.Caption">
    </style>

    <style name="TextAppearance.Body" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/colorTextBody</item>>
    </style>

    <!--TEXT Specific-->
    <style name="TextAppearance.Draft.Title" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorPrimaryTitle</item>
    </style>

    <style name="TextAppearance.Draft.MinFabText" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Body.User.Bio" parent="TextAppearance.Body">
        <item name="android:textSize">16sp</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <style name="TextAppearance.Body.Shot.Date" parent="TextAppearance.Body">
        <item name="android:textColor">@color/colorShotDate</item>
    </style>

    <style name="TextAppearance.Body.Shot.Description" parent="TextAppearance.Body">
        <item name="android:textSize">16sp</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <style name="TextInputLayout.DraftTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="ChipStyle" parent="Base.Widget.MaterialComponents.Chip">
        <item name="chipSurfaceColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
       <!-- <item name="android:textColor">@color/colorTextChip</item>-->
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <!--Activity Theming-->
    <style name="MyCourt.MainActivityTheme">
    </style>

    <style name="MyCourt.EditActivityTheme">
        <!--<item name="android:colorBackground">@color/colorBackgroundEdit</item>-->
    </style>

    <style name="MyCourt.DetailShotActivityTheme">
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MyCourt.SplashTheme">
        <item name="android:windowBackground">@drawable/background_gradient_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MyCourt.Settings">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Widgets-->
    <style name="Widget.MyCourt" parent="android:Widget" />

    <style name="Widget.MyCourt.divider">
        <item name="android:background">@color/colorTextDivider</item>
    </style>

    <style name="Widget.MyCourt.BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconTint">@drawable/selector_item_bottom_nav</item>
        <item name="itemTextColor">@drawable/selector_item_bottom_nav</item>
    </style>

    <style name="Widget.MyCourt.TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColorHint">@color/colorDraftHint</item>
        <item name="helperTextTextAppearance">@style/Widget.MyCourt.HelperTextStyle</item>
        <item name="hintTextAppearance">@style/Widget.MyCourt.HintTextStyle</item>
    </style>

    <style name="Widget.MyCourt.EditTextStyle">
        <item name="android:textColor">@color/colorDraftContent</item>
        <item name="android:background">@drawable/round_input_background</item>
        <item name="android:paddingLeft">@dimen/custom_edit_padding</item>
        <item name="android:paddingTop">@dimen/custom_edit_padding_top</item>
        <item name="android:paddingRight">@dimen/custom_edit_padding</item>
        <item name="android:paddingBottom">@dimen/custom_edit_padding</item>
    </style>

    <style name="Widget.MyCourt.HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">@color/colorDraftHint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="Widget.MyCourt.HelperTextStyle" parent="TextAppearance.Design.HelperText">
        <item name="android:textColor">@color/colorDraftHint</item>
        <item name="android:layout_marginTop">@dimen/padding_8</item>
    </style>

</resources>
