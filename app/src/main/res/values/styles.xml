<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. not managing colors here-->
    <style name="MyCourt" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <!-- transition and overlay-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <!--AppBar and Toolbar style -->
    <style name="MyCourt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" /> <!--todo ; change it -->
    <style name="MyCourt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" /><!--todo ; change it -->
    <style name="MyCourt.ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="MyCourt.MainActivityTheme">
        <!--<item name="android:windowLightStatusBar" tools:targetApi="23">true</item>-->
        <!--<item name="android:windowExitTransition">@transition/main_exit</item>
        <item name="android:windowReenterTransition">@transition/main_re_enter</item>-->
    </style>

    <style name="MyCourt.DetailShotActivityTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSharedElementEnterTransition">@transition/dribbble_shot_shared_enter</item>
        <item name="android:windowSharedElementReturnTransition">@transition/dribbble_shot_shared_return</item>
        <item name="android:windowEnterTransition">@transition/dribbble_shot_enter</item>
        <item name="android:windowReturnTransition">@transition/dribbble_shot_return</item>
    </style>

    <!--SplashActivity theme -->
    <style name="MyCourt.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!--TEXT GENERAL-->
    <!-- Toolbar -->
    <style name="TextAppearance.ToolbarTitle" parent="@android:style/TextAppearance.Material.Widget.Toolbar.Title">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorHeadline</item>
    </style>

    <!--Main title for shots and user name -->
    <style name="TextAppearance.Headline" parent="@android:style/TextAppearance.Material.Headline">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorHeadline</item>
    </style>

    <style name="TextAppearance.Subhead" parent="@android:style/TextAppearance.Material.Subhead">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorSubHead</item>
    </style>

    <!-- categoryTitle -->
    <style name="TextAppearance.TitlePrimary" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorPrimaryTitle</item>
    </style>

    <style name="TextAppearance.TitleSecondary" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorSecondaryTitle</item>
    </style>

    <style name="TextAppearance.Caption" parent="@android:style/TextAppearance.Material.Caption">
    </style>

    <style name="TextAppearance.Body" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/colorTextBody</item>>
    </style>

    <!--TEXT Specific-->
    <style name="TextAppearance.Draft.Title" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorPrimaryTitle</item>
    </style>

    <style name="TextAppearance.Draft.MinFabText" parent="@android:style/TextAppearance.Material.Body1">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Body.User.Bio" parent="TextAppearance.Body">
        <item name="android:textSize">16sp</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <style name="TextAppearance.Body.Shot.Date" parent="TextAppearance.Body">
        <item name="android:textColor">@color/colorSubHead</item>
    </style>

    <style name="TextAppearance.Body.Shot.Description" parent="TextAppearance.Body">
        <item name="android:textSize">16sp</item>
        <item name="lineHeightHint">24sp</item>
    </style>

    <!-- Widgets-->
    <style name="Widget.MyCourt" parent="android:Widget" />

    <style name="Widget.MyCourt.Toolbar">
        <item name="android:titleTextAppearance">@style/TextAppearance.ToolbarTitle</item>
        <item name="android:background">?android:colorPrimary</item>
        <!--<item name="android:elevation">@dimen/z_app_bar</item>-->
        <item name="android:theme">@style/MyCourtDarkOverlay</item>
    </style>

    <style name="MyCourtDarkOverlay" parent="@android:style/ThemeOverlay.Material.Dark">
        <!-- Used to theme dark elements in light themed screens.
             Extend the material dark Action Bar overlay as this contains text styling. -->
    </style>



</resources>
