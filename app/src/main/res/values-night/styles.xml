    <style name="BaseStyle" parent="Theme.MaterialComponents">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="MyCourt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />
