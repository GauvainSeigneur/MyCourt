<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tag_view"
    android:layout_width="wrap_content"
    android:background="@drawable/tag_background"
    android:paddingStart="@dimen/padding_4"
    android:paddingEnd="@dimen/padding_4"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tag_title"
        android:paddingTop="@dimen/padding_4"
        android:paddingEnd="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_4"
        android:paddingStart="@dimen/padding_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_tag_text_size"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tag_close_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/tag_close_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="@dimen/padding_4"
        android:background="@drawable/round_bg"
        android:backgroundTint="@color/delete_chip_icon_bg"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_close_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tag_title"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>