<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".ui.shotEdition.EditShotActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/MyCourt.ToolbarTheme">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_edit_shot"/>

    <LinearLayout
        android:id="@+id/bs_publish"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="72dp"
        android:weightSum="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_publish"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginEnd="@dimen/padding_8"
            android:layout_marginBottom="@dimen/padding_8"
            android:fontFamily="@font/raleway_bold"
            android:layout_height="56dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorSecondary"
            android:text="@string/publish"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_store"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="@dimen/padding_8"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginEnd="@dimen/padding_16"
            android:layout_marginBottom="@dimen/padding_8"
            android:backgroundTint="@color/colorSecondaryVariant"
            app:icon="@drawable/ic_save_black_24dp"/>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>