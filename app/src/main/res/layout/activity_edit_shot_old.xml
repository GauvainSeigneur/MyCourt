<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".ui.shotEdition.EditShotActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/MyCourt.ToolbarTheme">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="56dp">

            <seigneur.gauvain.mycourt.ui.widget.FourThreeImageView
                android:id="@+id/cropped_img_preview"
                android:clickable="true"
                android:background="@color/colorPrimaryLight"
                android:foreground="@drawable/rect_ripple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/shot_title_input"
                style="@style/Widget.MyCourt.TextInputLayoutStyle"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginStart="@dimen/padding_16"
                android:hint="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/shot_title_edt"
                    style="@style/Widget.MyCourt.EditTextStyle"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/shot_description_input"
                style="@style/Widget.MyCourt.TextInputLayoutStyle"
                android:imeOptions="actionDone"
                android:hint="Description"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/shot_description_edt"
                    style="@style/Widget.MyCourt.EditTextStyle"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/shot_tag_input"
                style="@style/Widget.MyCourt.TextInputLayoutStyle"
                android:imeOptions="actionDone"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginStart="@dimen/padding_16"
                app:helperTextEnabled="true"
                app:helperText="Separates tags with commas (eg.TagA, Tag b)"
                android:hint="Tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/shot_tag_edt"
                    style="@style/Widget.MyCourt.EditTextStyle"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/confirm_action_layout"
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:visibility="gone"
        android:layout_height="match_parent">

        <View
            android:id="@+id/scrim_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/confirm_edition_background"/>

        <FrameLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_gravity="end|bottom"
                android:gravity="end|bottom"
                android:paddingBottom="80dp"
                android:paddingRight="@dimen/padding_16"
                android:background="@drawable/quarter_circle_background"
                android:layout_height="250dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fab_publish_desc"
                        style="@style/TextAppearance.Draft.MinFabText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingRight="@dimen/padding_8"
                        android:text="Publish"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_8"
                        app:backgroundTint="@color/colorPrimary"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_hoop_black_24dp"
                        app:fabSize="mini"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextAppearance.Draft.MinFabText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingRight="@dimen/padding_8"
                        android:text="Save in drafts"/>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_draft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_8"
                        app:backgroundTint="@color/colorPrimary"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_save_black_24dp"
                        app:fabSize="mini"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_confirm"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/padding_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:elevation="8dp"
        android:tint="#ffffff"
        android:src="@drawable/asl_pathmorph_crosstick"/>

</android.support.design.widget.CoordinatorLayout>